{
	"name": "Minimalist for Everything [Beta]",
	"version": "0.5.8",
	"description": "You live in webapps. Make them yours",
	"icons": {
		 "16": "img/icons/icon16.png",
		 "48": "img/icons/icon48.png",
		"128": "img/icons/icon128.png" },
	"browser_action": {
		"default_icon": "img/icons/icon19.png",
		"default_title": "minimalist",
		"default_popup": "modal/browserAction.html"
	},
	"background_page": "background.html",
	"content_scripts": [ {
		"matches": [ "<all_urls>" ],
		"js": [ "js/libs/jquery.js", "js/libs/runtime.js" ],
		"run_at": "document_start",
		"all_frames": true
	}, {
		"matches": [ "http://userstyles.org/styles/*" ],
		"css": [ "css/import.css" ],
		"js": [ "js/io/userstyles.js" ],
		"run_at": "document_start"
	}, {
		"matches": [ "http://userscripts.org/scripts/*" ],
		"css": [ "css/import.css" ],
		"js": [ "js/io/userscripts.js" ],
		"run_at": "document_start"
	}, {
		"matches": [ "<all_urls>" ],
		"js": [ "js/minimalist.js", "js/inject.js", "js/init.js" ],
		"run_at": "document_start",
		"all_frames": true
	} ],
	"options_page": "options.html",	
	"permissions": [
		"<all_urls>",
		"bookmarks",
		"clipboardWrite",
		"contextMenus",
		"notifications",
		"tabs",
		"unlimitedStorage"
	]
}